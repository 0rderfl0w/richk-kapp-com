        </div>
      </div>
    </div>
  </section>

  <!-- How I Work -->
  <section class="py-20 relative overflow-hidden scroll-reveal">
    <div class="absolute inset-0 bg-gradient-to-b from-white via-brand-50/20 to-white -z-10"></div>
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 text-center mb-16 slide-in-up">How I Work</h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center group slide-in-up" style="animation-delay: 0.1s">
          <div class="w-16 h-16 bg-gradient-to-br from-brand-500 to-brand-700 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 group-hover:shadow-lg group-hover:shadow-brand-200 transition-all duration-300">
            <span class="text-white text-2xl font-bold">1</span>
          </div>
