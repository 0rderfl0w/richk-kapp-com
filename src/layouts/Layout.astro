---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Perspective — Strategic Advisory | Richard Kappel',
  description = 'I help people and teams figure sh*t out and grow. Strategic advisory for solopreneurs, startups, and distributed teams.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://richkapp.com" />
    <title>{title}</title>
  </head>
  <body class="bg-white text-gray-900 font-sans antialiased">
    <nav class="fixed top-0 w-full bg-white/90 backdrop-blur-sm border-b border-gray-100 z-50">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 py-4 flex items-center justify-between">
        <a href="/" class="text-lg font-bold tracking-tight">
          <span class="text-brand-600">Perspective</span>
        </a>
        <div class="hidden md:flex items-center gap-8 text-sm font-medium text-gray-600">
          <a href="/advisory" class="hover:text-brand-600 transition-colors">Advisory</a>
          <a href="/ai" class="hover:text-brand-600 transition-colors">AI for SMBs</a>
          <a href="/contact" class="inline-flex items-center px-4 py-2 bg-brand-600 text-white rounded-lg hover:bg-brand-700 transition-colors">
            Request a Session
          </a>
        </div>
        <button id="mobile-menu-btn" class="md:hidden p-2 text-gray-600" aria-label="Menu">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
      <div id="mobile-menu" class="hidden md:hidden border-t border-gray-100 bg-white px-4 pb-4">
        <a href="/advisory" class="block py-2 text-gray-600 hover:text-brand-600">Advisory</a>
        <a href="/ai" class="block py-2 text-gray-600 hover:text-brand-600">AI for SMBs</a>
        <a href="/contact" class="block py-2 text-brand-600 font-medium">Request a Session →</a>
      </div>
    </nav>

    <main class="pt-16">
      <slot />
    </main>

    <footer class="bg-gray-50 border-t border-gray-100 mt-20">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 py-12">
        <div class="grid md:grid-cols-3 gap-8">
          <div>
            <span class="text-lg font-bold text-brand-600">Perspective</span>
            <p class="mt-2 text-sm text-gray-500">Strategic Advisory</p>
          </div>
          <div class="flex flex-col gap-2 text-sm text-gray-600">
            <a href="/advisory" class="hover:text-brand-600 transition-colors">Advisory Services</a>
            <a href="/ai" class="hover:text-brand-600 transition-colors">AI for SMBs</a>
            <a href="/contact" class="hover:text-brand-600 transition-colors">Contact</a>
          </div>
          <div class="text-sm text-gray-500">
            <p>Based in Lisbon, Portugal</p>
            <p class="mt-1">Available for travel on projects lasting a month or longer.</p>
          </div>
        </div>
        <div class="mt-8 pt-8 border-t border-gray-200 text-xs text-gray-400 text-center">
          &copy; {new Date().getFullYear()} Richard Kappel. All rights reserved.
        </div>
      </div>
    </footer>

    <script>
      document.getElementById('mobile-menu-btn')?.addEventListener('click', () => {
        document.getElementById('mobile-menu')?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
